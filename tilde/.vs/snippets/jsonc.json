{
	"Comment Header": {
		"prefix": "hdr",
		"body": [
			"/*",
			" * $1",
			" */",
			"",
			"$0"
		],
		"description": "Insert a comment header"
	},

	"Associate file to json": {
		"prefix": "jsfile",
		"body": [
			"",
			"\"$1\": \"json\",",
		],
		"description": "Insert a template for interpreting a filename as json",
	},

	"Associate json to schema": {
		"prefix": "jschema",
		"body": [
			"",
			"{",
				"\t\"fileMatch\": [",
					"\t\t\"$1\",",
				"\t],",
				"\t\"url\": \"./.json-schemata/$2\",",
			"},$0",
		],
		"description": "Insert a template for associating a schema",
	},

	"VS Code Snippet": {
		"prefix": "snip",
		"body": [
			"\"$1\": {",
			"\t\"prefix\": \"$2\",",
			"\t\"body\": [",
			"\t\t\"$4\"$0",
			"\t],",
			"\t\"description\": \"$3\"",
			"}"
		],
		"description": "Define a new VS Code snippet"
	},

	"VS Code Keybinding": {
		"prefix": "key",
		"body": [
			"{",
				"\t\"key\": \"${1:key}\",",
				"\t\"when\": \"${2:condition}\",",
				"\t\"command\": \"${3:action}\",",
			"},",
		],
		"description": "Define a new VS Code keybinding",
	},

	"VS Code Workspace": {
		"prefix": "cow",
		"body": [
			"{",
				"\t\"folders\": [",
					"\t\t{",
						"\t\t\t\"name\": \"${1:name}\",",
						"\t\t\t\"path\": \"../\",",
					"\t\t},",
				"\t],",
				"\t\"settings\": {},",
			"}",
		],
	},
}
